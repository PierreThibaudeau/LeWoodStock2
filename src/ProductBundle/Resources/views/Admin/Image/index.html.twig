{% extends 'ProductBundle:Admin:base.html.twig' %}

{% block content %}
    <h1>Images list</h1>
    <hr>
    <div class="table-responsive">
        <table class="table table-stripped table-condensed">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Designation</th>
                    <th>Url</th>
                    <th>Alt</th>
                </tr>
            </thead>
            <tbody>
            {% for image in images %}
                <tr>
                    <td>
                        <a href="{{ path('admin_image_show', { 'id': image.id }) }}">
                            {{ image.id }}
                        </a>
                    </td>
                    <td> {{ image.designation }} </td>
                    <td>
                        <a href="{{ path('admin_image_show', { 'id': image.id }) }}">
                            {{ image.url }}
                        </a>
                    </td>

                    <td> {{ image.alt }} </td>

                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="{{ path('admin_image_show', { 'id': image.id }) }}"
                                    class="btn btn-xs btn-primary">
                                    Show
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('admin_image_edit', { 'id': image.id }) }}"
                                    class="btn btn-xs btn-warning">
                                    Edit
                                </a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <hr>
    <ul class="list-inline">
        <li>
            <a href="{{ path('admin_image_new') }}" class="btn btn-sm btn-success">
                Create a new image
            </a>
        </li>
    </ul>
{% endblock %}
